<%- include('layout/header') %>

    <div class="container">
        <div class="row">
            <div class="col-lg-6 mx-auto mt-4">
                <div class="card shadow">
                    <div class="card-header bg-primary">
                        <h3 class="text-light">Amount Transfer</h3>
                    </div>
                    <div class="card-body p-4">
                        <form action="/api/user/payment/amounttransfer" method="post" id="signin">
                            <div class="form-group mb-3">
                                <label for="transferamount">Amount</label>
                                <input type="text" class="form-control" id="transferamount" name="transferamount"
                                    placeholder="Enter Amount to be transfered" autocomplete="off" maxlength="10" required>
                            </div>
                            <div class="form-group mb-3">
                                <label for="toAccount">Account No.</label>
                                <input type="text" class="form-control" id="toAccount" name="toAccount"
                                    placeholder="Enter Account No." autocomplete="off" maxlength="20">
                            </div>
                            <div class="form-group mb-3 d-grid">
                                <button type="submit" class="btn btn-primary" value="Add User">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('layout/footer') %>