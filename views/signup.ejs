<%- include('layout/header') %>

    <div class="container">
        <div class="row">
            <div class="col-lg-6 mx-auto mt-4">
                <div class="card shadow">
                    <div class="card-header bg-primary">
                        <h3 class="text-light">Sign Up User</h3>
                    </div>
                    <div class="card-body p-4">
                        <form action="/api/user/signup" method="post" id="signup">
                            <div class="form-group mb-3">
                                <label for="email">Email</label>
                                <input type="email" class="form-control" id="email" name="email"
                                    placeholder="Enter Email" autocomplete="off" required>
                            </div>
                            <div class="form-group mb-3">
                                <label for="password">Password</label>
                                <input type="password" class="form-control" id="password" name="password"
                                    placeholder="Enter password" autocomplete="off" required>
                            </div>
                            <div class="form-group mb-3 d-grid">
                                <button type="submit" class="btn btn-primary" value="Add User">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('layout/footer') %>